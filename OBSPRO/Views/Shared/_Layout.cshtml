<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DSC OBSPRO</title>

    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")

    <style>
        #foot {
            position: fixed !important;
            width: 100%;
            bottom: 0;
            text-align: center;
            padding: 5px 0;
            background: #f0f0f0;
            border-top: 1px solid #666;
        }

        .btnAdd {
            background: #3d85c6;
            background: -webkit-linear-gradient(#073763, #3d85c6 50%, #073763);
            background: linear-gradient(#073763, #3d85c6 50%, #073763);
            border: 1px solid #569;
            border-radius: 9px;
            box-shadow: -2px 2px 0 0 #444;
            color: #fff;
            display: inline-block;
            padding: 5px 13px;
            font: normal 700 14px/1 "Calibri", sans-serif;
            text-align: center;
            text-shadow: 2px 2px 0 #070550;
        }

        .btnAdd:hover {
            background: #3498db;
            background: -webkit-linear-gradient(#3d85c6, #3498db 50%, #3d85c6);
            background: linear-gradient(#3d85c6, #3498db 50%, #3d85c6);
            font: normal 700 14px/1 "Calibri", sans-serif;
            color: white;
        }

        .btnAdd:focus {
            font: normal 700 14px/1 "Calibri", sans-serif;
            color: white;
        }

        .container-fluid {
            max-width: 1500px;
            padding: 25px; /*Whitespace or outside gutter*/
        }

        .wellDSC {
            padding: 1px;
            font-size: xx-large;
            margin-bottom: 5px;
            margin-top: 1px;
        }

        .nopadding {
            padding: 0 !important;
            margin: 0 !important;
        }
    </style>
</head>

<body>
    @Scripts.Render("~/bundles/bootstrap")
    <div id="App_Flags">
        <input type="hidden" id="reloadPage" value="N" />
    </div>

    @*@try {
            var sessionActive = Session["emp_id"].ToString();
      }
      catch {
            @RenderBody();
            Html.Action("OBSLogout", "Login");
      }*@


    @if (!User.Identity.IsAuthenticated)
    {
        <div class="container-fluid body-content" style="margin:0 auto">
            @RenderBody()
        </div>
        <input type="hidden" id="goTologoff" value="Y" />
        //Html.Action("OBSLogout", "Login");
    }
    else
    {
        <div style="text-align:center">
            @Html.Partial("_NavMenu")
        </div>
        <div class="container-fluid body-content" style="margin:0 auto">
            @RenderBody()
        </div>
        <div class="row" id="foot" style="z-index: 999">
            <div class="col-sm-4 col-sm-offset-3">
                Questions? <a href="mailto:dsclogistics@service-now.com">dsclogistics@service-now.com</a>
            </div>
            <div class="col-sm-4" style="text-align:right">
                v 1.2
            </div>
        </div>
        
        <div>
            <div id="msgForm" class="modal fade" role="dialog">
                <div class="modal-dialog" style="width:35%; min-width:400px">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header bg-primary">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title msgFormTitle">Red Zone Application Message</h4>
                        </div>
                        <div class="modal-body" id="msgFormBody">
                            <div class="row " id="msgFormBodyData" style="margin-top:40px; margin-bottom:30px; text-align:center">
                            </div>
                        </div>
                        <div class="modal-footer" id="msgFormFooter" style="text-align:center">
                            <button type="button" class="btn btn-primary" id="btnCancelMsgForm" data-dismiss="modal" style="width:120px">DONE</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jqueryUI")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function () {
        if ($("#goTologoff").val() == "Y") {
            window.location.href = "/Login/Login";
        }

        $("#btnCancelMsgForm").click(function () {
            if ($('#reloadPage').val() == "Y") { window.location.reload(); }
        });

    });
</script>