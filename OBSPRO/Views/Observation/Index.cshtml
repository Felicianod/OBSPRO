@model List<OBSPRO.Models.Observation>
@{
    ViewBag.Title = "Observations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .personal-info {
        margin: 0px;
    }
</style>
<form method="get">
    <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Search</span>
        <input type="text" id="searchString" name="searchString" class="form-control" placeholder="@ViewBag.searchText" aria-describedby="basic-addon1">
        <button type="submit" class="btn btn-primary">GO</button>
    </div>
</form>

<br />
<div class="row personal-info">
    <div class="panel panel-info">
        <!-- PANEL HEADER-->
        <div class="panel-heading">
            <table style="width:100%">
                <tr>
                    <td>
                        <b>@*@Model.First().status*@ OBSERVATIONS</b>
                        @*<a class="accordion-toggle" data-toggle="collapse" href="#panelSection01">
                            <span class="glyphicon glyphicon-minus">&nbsp;</span>
                            <b>OBSERVATION INSTANCES</b>
                        </a>*@
                    </td>
                </tr>
            </table>
        </div>
        <!-- PANEL BODY -->
        <div class="panel-body collapse in" id="panelSection01">
            <table class="table table-condensed table-hover table-responsive">
                <thead>
                    <tr>
                        @*<th>Form Id</th>*@
                        <th>@Html.ActionLink("FORM TITLE","Index",new { sortBy = ViewBag.sortTitleParameter, searchString = ViewBag.searchText })</th>
                        <th>@Html.ActionLink("OBSERVER", "Index", new { sortBy = ViewBag.sortObserverParameter, searchString = ViewBag.searchText })</th>
                        <th>@Html.ActionLink("EMPLOYEE OBSERVED", "Index", new { sortBy = ViewBag.sortEmpObservedParameter, searchString = ViewBag.searchText })</th>
                        <th>@Html.ActionLink("OBS Status", "Index", new { sortBy = ViewBag.sortStatusParameter, searchString = ViewBag.searchText })</th>
                        <th style="text-align:center">@Html.ActionLink("ADP ID", "Index", new { sortBy = ViewBag.sortADPParameter, searchString = ViewBag.searchText })</th>
                        <th style="text-align:center">@Html.ActionLink("Started On", "Index", new { sortBy = ViewBag.sortStartDateParameter, searchString = ViewBag.searchText })</th>
                        <th style="text-align:center">@Html.ActionLink("Completed On", "Index", new { sortBy = ViewBag.sortComplDateParameter, searchString = ViewBag.searchText })</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    { // No records Found
                        <tr>
                            <td colspan="7" style="text-align:center;">
                                <div class="alert-warning" style="padding:4px; font-size:large; margin-top:10px">There are No Forms to Display</div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var observation in Model)
                        {
                            var dateStarted = Convert.ToDateTime(observation.obs_start_time).ToString("MMM dd, yyyy  @ [hh:mm tt]");
                            <tr>
                                @*<td>@observation.form_inst_id </td>*@
                                <td style="width:30%">@Html.ActionLink(observation.form_title, "viewForm", "Observation", new { id = @observation.form_inst_id }, null)</td>
                                <td>@observation.observer_first_name  @observation.observer_last_name</td>
                                <td>@observation.observed_first_name @observation.observed_last_name</td>
                                <td>@observation.status</td>
                                <td style="text-align:center">@observation.observed_adp_id</td>
                                @*<td style="text-align:center">@observation.observed_id</td>*@
                                <td style="text-align:center">@observation.obs_start_time</td>
                                <td style="text-align:center">
                                    @if(observation.obs_compl_time.Substring(0, 12).Equals("Jan 01, 0001"))
                                    { <text>N/A</text>}
                                    else { @observation.obs_compl_time; }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> <!-- _______________ END OF COLLAPSIBLE PANEL SECTION ___________________ -->
